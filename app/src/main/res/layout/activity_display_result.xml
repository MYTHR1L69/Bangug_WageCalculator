<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayResult">

    <TextView
        android:id="@+id/txtEmployeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:text="Employee Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEmployeeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Employee Type"
        app:layout_constraintStart_toStartOf="@+id/txtEmployeeName"
        app:layout_constraintTop_toBottomOf="@+id/txtEmployeeName" />

    <TextView
        android:id="@+id/txtHoursRendered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Total Hours Rendered"
        app:layout_constraintStart_toStartOf="@+id/txtEmployeeType"
        app:layout_constraintTop_toBottomOf="@+id/txtEmployeeType" />

    <TextView
        android:id="@+id/txtOTHoursRendered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="OT Hours Rendered"
        app:layout_constraintStart_toStartOf="@+id/txtHoursRendered"
        app:layout_constraintTop_toBottomOf="@+id/txtHoursRendered" />

    <TextView
        android:id="@+id/txtRegularWage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Regular Wage"
        app:layout_constraintStart_toStartOf="@+id/txtHoursRendered"
        app:layout_constraintTop_toBottomOf="@+id/txtOTHoursRendered" />

    <TextView
        android:id="@+id/txtOTWage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="OT Wage"
        app:layout_constraintStart_toStartOf="@+id/txtRegularWage"
        app:layout_constraintTop_toBottomOf="@+id/txtRegularWage" />

    <TextView
        android:id="@+id/txtTotalWage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="Total Wage"
        app:layout_constraintStart_toStartOf="@+id/txtHoursRendered"
        app:layout_constraintTop_toBottomOf="@+id/txtHoursRendered" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:backgroundTint="#F44336"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>